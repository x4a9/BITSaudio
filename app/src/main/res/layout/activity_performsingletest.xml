<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/page"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_grey"
    tools:context="org.woheller69.audiometry.PerformSingleTest"
    android:gravity="center"
    android:keepScreenOn="true">

    <TextView
        android:layout_above="@id/ear"
        android:layout_marginBottom="40dp"
        android:text="@string/test_running"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/ear"
        android:layout_above="@id/frequency"
        android:background="@drawable/button_background"
        android:text="@string/right_ear"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/frequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="8000 Hz"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frequency"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="20db"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/vol_plus"
        android:layout_width="60dp"
        android:padding="10dp"
        android:background="@drawable/button_background"
        android:layout_height="wrap_content"
        android:layout_below="@id/frequency"
        android:layout_marginTop="20dp"
        android:text="+"
        android:textSize="40sp"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/vol_minus"
        android:layout_width="60dp"
        android:padding="10dp"
        android:background="@drawable/button_background"
        android:layout_height="wrap_content"
        android:layout_below="@id/frequency"
        android:layout_marginTop="20dp"
        android:text="-"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:layout_alignParentStart="true"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/freq_plus"
        android:layout_width="60dp"
        android:padding="10dp"
        android:background="@drawable/button_background"
        android:layout_height="wrap_content"
        android:layout_below="@id/ear"
        android:text="+"
        android:textSize="40sp"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/freq_minus"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ear"
        android:layout_alignParentStart="true"
        android:background="@drawable/button_background"
        android:padding="10dp"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />
</RelativeLayout>
